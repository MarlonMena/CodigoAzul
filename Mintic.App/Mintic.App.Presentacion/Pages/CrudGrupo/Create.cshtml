@page
@model Mintic.App.Presentacion.Pages.CrudGrupo.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Grupo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Grupo.Formador" class="control-label"></label>
                <select asp-for="Grupo.Formador" class="form-control" asp-items="Model.ListaFormadores">
                <option>Seleccione un Formador</option>
                </select>
                <span asp-validation-for="Grupo.Formador" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Grupo.Tutor" class="control-label"></label>
                <select asp-for="Grupo.Tutor" class="form-control" asp-items="Model.ListaTutores">
                <option>Seleccione un Tutor</option>
                </select>
                <span asp-validation-for="Grupo.Tutor" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Grupo.CodigoGrupo" class="control-label"></label>
                <input asp-for="Grupo.CodigoGrupo" class="form-control" />
                <span asp-validation-for="Grupo.CodigoGrupo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
