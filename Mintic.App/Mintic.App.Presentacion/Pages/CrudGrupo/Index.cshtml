@model Mintic.App.Presentacion.Pages.CrudGrupo.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Grupo[0].CodigoGrupo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grupo[0].Formador)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grupo[0].Tutor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Grupo) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CodigoGrupo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Formador.Nombres) @Html.DisplayFor(modelItem => item.Formador.Apellidos) <!--DEBERIA MOSTRAR EL NOMBRE PERO NO-->
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tutor.Nombres) @Html.DisplayFor(modelItem => item.Tutor.Apellidos) <!--DEBERIA MOSTRAR EL NOMBRE PERO NO-->
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
